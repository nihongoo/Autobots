    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Plugin: Ironhide",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/plugins/ironhide",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/config/plugin.env",
            "env": {
                "PLUGIN_NAME": "ironhide",
                "PLUGIN_ENV": "dev"
            }
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        }
    ]
}